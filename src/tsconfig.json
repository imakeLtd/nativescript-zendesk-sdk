{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false, // TODO
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false // TODO
  },
  "include": [
    // refs
    "node_modules/tns-platform-declarations/android.d.ts",
    "node_modules/tns-platform-declarations/ios.d.ts",
    "typings/*",
    // srcs
    "zendesk-sdk.*.ts"
  ],
  "compileOnSave": false
}
